{
  "expo": {
    "name": "Secure Folder",
    "slug": "secure-folder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "securefolder",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.securefolder.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Capture security photos on failed PIN attempts",
        "NSPhotoLibraryUsageDescription": "Upload documents from your gallery",
        "NSLocationWhenInUseUsageDescription": "Log location during document access"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "package": "com.securefolder.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Capture security photos when someone attempts to unlock your device"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Log location when officers access your documents"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Upload documents from your photo library",
          "cameraPermission": "Take photos of your documents"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
