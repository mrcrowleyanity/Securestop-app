{
  "expo": {
    "name": "Secure Folder",
    "slug": "secure-folder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "securefolder",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.securefolder.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Capture security photos on failed PIN attempts and scan documents",
        "NSPhotoLibraryUsageDescription": "Upload documents from your gallery",
        "NSLocationWhenInUseUsageDescription": "Log location during document access for security",
        "NSLocationAlwaysUsageDescription": "Log location during document access for security",
        "NSMicrophoneUsageDescription": "Record audio during secure mode for evidence",
        "NSContactsUsageDescription": "Access emergency contacts",
        "UIBackgroundModes": ["audio", "location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "package": "com.securefolder.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_CONTACTS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ],
      "blockedPermissions": []
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Capture security photos when someone attempts to unlock your device and scan documents",
          "microphonePermission": "Record audio during secure mode for evidence",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Log location when officers access your documents",
          "locationAlwaysAndWhenInUsePermission": "Log location during secure mode for security",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Upload documents from your photo library",
          "cameraPermission": "Take photos of your documents"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Access photos for document storage",
          "savePhotosPermission": "Save document photos",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Access emergency contact information"
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Record audio during secure mode"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "secure-folder-app"
      }
    }
  }
}
